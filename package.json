{
  "name": "github-rss",
  "description": "GitHub RSS Generator - Generate and manage RSS feeds for GitHub repositories",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "meteor run",
    "dev": "meteor run",
    "visualize": "meteor --production --extra-packages bundle-visualizer",
    "update-feeds": "node scripts/update-feeds.js",
    "update-feeds-once": "node scripts/update-feeds.js --run-once",
    "type-check": "tsc --noEmit",
    "setup": "cp .env.example .env && echo 'Please configure your .env file with your API keys'",
    "build": "meteor build ../build --directory",
    "deploy": "meteor deploy github-rss.meteorapp.com"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.926.0",
    "@babel/runtime": "^7.23.5",
    "@swc/helpers": "^0.5.17",
    "aws-sdk": "^2.1692.0",
    "dotenv": "^17.2.3",
    "meteor-node-stubs": "^1.2.12",
    "mongodb": "^6.3.0",
    "node-cron": "^3.0.2",
    "node-fetch": "^2.7.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/meteor": "^2.9.10",
    "@types/node": "^22.10.6",
    "@types/node-cron": "^3.0.8",
    "@types/react": "^18.2.5",
    "@types/react-dom": "^18.2.4",
    "typescript": "^5.4.5"
  },
  "meteor": {
    "mainModule": {
      "client": "client/main.tsx",
      "server": "server/main.ts"
    },
    "modern": true
  }
}
